<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.foodroulette.PreferencesActivity" >

    <Button
        android:id="@+id/button_SPIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minHeight="3dp"
        android:minWidth="35dp"
        android:text="SPIN" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_SPIN"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBox_Bakeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Bakeries" />

        <CheckBox
            android:id="@+id/checkBox_Barbeque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barbeque"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Breakfast"
           android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Buffets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Buffets"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Burgers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Burgers"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Cafes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Cafes"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Chinese"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Desserts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desserts"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Ethiopian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Ethiopian"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_FastFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Fast Food"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Indian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Indian"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Italian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Italian"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_SPIN"
        android:layout_alignLeft="@+id/distanceText"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBox_Japanese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Japanese"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Korean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Korean"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Mexican"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Mexican"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Mediterranean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Mediterranean"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Pizza"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Pubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pubs"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Sandwiches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Sandwiches"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Seafood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Seafood"
            android:textSize="25sp"/>

        <CheckBox
            android:id="@+id/checkBox_Southern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Southern"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_SouthAmerican"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South American"
            android:textSize="25sp"  />

        <CheckBox
            android:id="@+id/checkBox_Vietnamese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Vietnamese"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/checkBox_Thai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="Thai"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Preferences"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text="0/20" />

    <SeekBar
        android:id="@+id/seekBar_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/distanceText"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_marginBottom="14dp"
        android:max="20" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar_distance"
        android:layout_alignLeft="@+id/seekBar_distance"
        android:layout_marginBottom="17dp"
        android:text="Distance" />

    <RatingBar
        android:id="@+id/ratingBar_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:numStars="5"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ratingBar_ratings"
        android:layout_alignLeft="@+id/ratingBar_ratings"
        android:text="Ratings" />

    <TextView
        android:id="@+id/BudgetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="17dp"
        android:text="Budget" />

    <Spinner
        android:id="@+id/spinner_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:entries="@array/budget_array" />
    
     <TextView
         android:id="@+id/BudgetValue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/spinner_budget"
         android:layout_alignRight="@+id/button_SPIN"
         android:layout_marginLeft="11dp"
         android:text="0/5" />

    <TextView
        android:id="@+id/RatingsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ratingBar_ratings"
        android:layout_marginBottom="19dp"
        android:layout_toRightOf="@+id/button_SPIN"
        android:text="0/5" />

</RelativeLayout>